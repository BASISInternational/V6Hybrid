0010 REM "MPC - Open MRP Files Using Alias"
0020 REM "Program MPC.FA"
0022 REM "+-----------------------------------------------------------+"
0024 REM "| ADD+ON Software, Inc. Advantage/V Version 6.0.0 - 15May96 |"
0026 REM "|      Copyright (c) 1996 Open Systems Holdings Corp.       |"
0028 REM "|                  All Rights Reserved                      |"
0030 REM "+-----------------------------------------------------------+"
0040 REM 
0042 REM "CHANNEL  : Channel number to open file using (Input)"
0044 REM "ALIAS$   : Standard ADD+ON file alias, e.g. MPE-03 (Input)"
0046 REM "FIRM$    : Firm ID (Input)"
0048 REM "FORECAST$: Forecast Type (Input)"
0050 REM "FILENAME$: Actual file name opened (Returned)"
0054 REM "STATUS   : 0=No Error (Returned)
0075 REM 
0080 SETERR 9000
0085 SETESC 9000
0090 ENTER CHANNEL,ALIAS$,FIRM$,FORECAST$,FILENAME$,STATUS
0500 REM " --- Initializations"
0510 LET ACTION=1,FILES=1
0520 IF CHANNEL<>0 THEN LET ACTION=0,FILES=CHANNEL
0590 LET ALIAS=0,STATUS=0
1000 REM " --- Build FILENAME$"
1010 LET STATUS=10
1020 IF LEN(ALIAS$)<>6 THEN GOTO 9400
1030 LET FILENAME$=ALIAS$(1,2)+ALIAS$(6,1)+FIRM$+FNP$(FORECAST$)
1100 REM " --- Open FILENAME$"
1110 DIM FILES$[FILES],OPTIONS$[FILES],CHANNELS[FILES]
1120 LET FILES$[FILES]=FILENAME$,OPTIONS$[FILES]="F"
1130 LET BEGFILE=FILES,ENDFILE=FILES
1140 CALL "SYC.DA",ACTION,BEGFILE,ENDFILE,FILES$[ALL],OPTIONS$[ALL],CHANNELS[A
1140:LL],BATCH,DA_STATUS
1150 IF DA_STATUS>0 THEN GOTO 9400
1160 IF CHANNELS[FILES]<>0 THEN GOTO 1190
1170 CALL "SYC.ML",FILENAME$,ALIAS$,ML_STATUS
1180 GOTO 1100
1190 LET CHANNEL=CHANNELS[FILES]
4000 REM " --- All Done"
4010 LET STATUS=0
4090 GOTO 9900
8000 REM " --- Function Definitions"
8080 DEF FNP$(Q$)=CVS(Q$,2)
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN
9400 REM 
9410 IF STATUS=0 THEN LET STATUS=E0
9420 IF STATUS=0 THEN LET STATUS=ERR
9430 IF STATUS=0 THEN LET STATUS=256
9500 REM 
9510 DIM MESSAGE$[2]
9520 LET MESSAGE$[0]="Unable to open or define MRP work file for Firm "+$22$+F
9520:IRM$+$22$
9530 LET MESSAGE$[1]="Forecast Type "+$22$+FNP$(FORECAST$)+$22$+" - File "+$22
9530:$+ALIAS$+$22$+". Status was "+STR(STATUS)
9540 LET MESSAGE$[2]="             Press <Enter> To Continue"
9550 CALL "SYC.XA",1,MESSAGE$[ALL],2,22,-1,V$,V3
9590 GOTO 9900
9900 REM " --- Return to calling program"
9950 EXIT
9999 END
