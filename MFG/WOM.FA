1320:=2,V1=39,V2=7
1340 GOSUB 7000
1345 IF V3=2 THEN GOTO 1390
1350 IF V3=4 THEN GOTO 9900
1360 IF V<1 OR V>12 THEN GOTO 1300
1370 PRINT @(V1,V2),V:"#0"," ",MONTHS$((V-1)*9+1,9),'CL',
