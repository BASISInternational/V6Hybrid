5000 REM " --- Display Unscheduled Gaps in Calendar
5010 READ (WOM04_DEV,KEY=N0$+OPCODE$,DOM=5011)
5020 LET GAP$=""
5100 REM " --- Process First Month"
5110 LET K$=KEY(WOM04_DEV,END=5500)
5120 IF POS(N0$+OPCODE$=K$)<>1 THEN GOTO 5500
5130 READ (WOM04_DEV,KEY=K$)IOL=WOM04A; LET LAST_MONTH$=A0$(6,4)+STR(A[0]:"00"
5130:)
5140 FOR X0=1 TO A[0]; IF A[X0]>=0 THEN EXITTO 5150
5145 NEXT X0
5150 FOR X1=X0 TO A[0]; IF A[X1]<0 THEN EXITTO 5170
5155 NEXT X1
5160 GOTO 5200
5170 LET GAP$=GAP$+K$(6,4)+STR(X1:"00")
5180 FOR X2=X1 TO A[0]; IF A[X2]>=0 THEN EXITTO 5195
5185 NEXT X2
5190 GOTO 5200
5195 LET GAP$=GAP$+K$(6,4)+STR(X2-1:"00"),X0=X2; GOTO 5150
5200 REM " --- Process remaining months
5210 LET K$=KEY(WOM04_DEV,END=5400)
5220 IF POS(N0$+OPCODE$=K$)<>1 THEN GOTO 5400
5230 LET X$=""
5235 CALL "SYC.CA",LAST_MONTH$,X$,1
5240 IF X$(1,4)=K$(6,4) THEN GOTO 5250
5245 IF MOD(LEN(GAP$),12)=0 THEN LET GAP$=GAP$+X$
5250 READ (WOM04_DEV,KEY=K$)IOL=WOM04A; LET LAST_MONTH$=A0$(6,4)+STR(A[0]:"00"
5250:)
5255 IF MOD(LEN(GAP$),12)=0 AND A[1]=-1 THEN LET GAP$=GAP$+K$(6,4)+"01" ELSE G
5255:OTO 5275
5260 FOR X=1 TO A[0]; IF A[X]>=0 THEN EXITTO 5270
5265 NEXT X
5270 LET GAP$=GAP$+K$(6,4)+STR(X-1:"00"),X0=X; GOTO 5310
5275 IF MOD(LEN(GAP$),12)<>0 AND A[1]>=0 THEN LET X$=""; CALL "SYC.CA",K$(6,4)
5275:+"01",X$,-1; LET GAP$=GAP$+X$,X0=1; GOTO 5310
5280 IF MOD(LEN(GAP$),12)<>0 AND A[1]=-1 THEN LET GAP$=GAP$+A0$(6,4) ELSE GOTO
5280: 5300
5285 FOR X=1 TO A[0]; IF A[X]>=0 THEN EXITTO 5295
5290 NEXT X
5295 LET GAP$=GAP$+STR(X-1:"00"),X0=X; GOTO 5310
5300 LET X0=1
5310 FOR X1=X0 TO A[0]; IF A[X1]=-1 THEN EXITTO 5330
5315 NEXT X1
5320 GOTO 5200
5330 LET GAP$=GAP$+K$(6,4)+STR(X1:"00")
5340 FOR X2=X1 TO A[0]; IF A[X2]>=0 THEN EXITTO 5355
5345 NEXT X2
5350 GOTO 5200
5355 LET GAP$=GAP$+K$(6,4)+STR(X2-1:"00"),X0=X2; GOTO 5310
5360 GOTO 5200
5400 REM " --- Now Prepare To Display Gaps"
5410 IF MOD(LEN(GAP$),12)<>0 THEN LET GAP$=GAP$(1,LEN(GAP$)-6)
5420 IF LEN(GAP$)=0 THEN GOTO 5690
5430 PRINT @(10,11),"The following gaps in scheduled days have been detected:"
5440 LET L0=11
