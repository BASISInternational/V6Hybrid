5510 IF LEN(GAP$)=0 THEN GOTO 5600
5520 LET L0=L0+1
5530 IF L0>20 THEN GOSUB 5700; IF V3=4 THEN GOTO 5680
5540 PRINT @(27,L0),FNB6$(GAP$(1,6))," through ",FNB6$(GAP$(7,6)),
5550 LET GAP$=GAP$(13)
5560 GOTO 5500
5600 REM " --- End Of Gaps
5610 LET V0$="S",V1$="C",V2$="",V3$="",V4$="<Enter> To Continue  ",V0=1,V1=FNV
5610:(V4$),V2=22
