1210 LET V4$="Month Does Not Exist. Create It Now"
1220 CALL "SYC.YN",1,V4$,1,V$,V3
1225 IF V3=4 THEN GOTO 9900
1230 IF V$="N" THEN GOTO 1000
1240 IF V$<>"Y" THEN GOTO 1200
1250 LET A0$=N0$+OPCODE$+R1$+STR(R0:"00"); DIM A1$(10),A2$(10),A[31]
1260 FOR X=1 TO 31
1270 LET A[X]=-1
1280 NEXT X
1290 GOTO 4100
1300 REM " --- Month To Change"
