5710:NV(V4$),V2=22
5720 GOSUB 7000
5730 LET L0=12
5740 IF V3<>4 THEN PRINT @(0,L0),'CE',
5790 RETURN
6200 REM " --- Find First And Last Date For This Op Code"
6210 LET FIRST_DATE$="   "
6220 READ (WOM04_DEV,KEY=N0$+OPCODE$,DOM=6230)
