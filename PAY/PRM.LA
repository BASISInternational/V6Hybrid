1460 PRINT @(V1+V0+1,V2),X0$(6,16),
1500 REM " --- Find Record"
1520 FIND (PRT05_DEV,KEY=A0$,DOM=1600)IOL=PRT05A
1540 GOSUB 5000
1590 GOTO 4000
1600 REM " --- New Record"
1620 CALL "SYC.YN",1,"Is This A New Record",1,V$,V3
1640 ON POS(V$="YN") GOTO 1600,1700,1000
1700 REM " --- Set Up"
1720 DIM A[11]
2000 REM " --- Overlay"
2010 LET O9=1
2020 FOR X0=0 TO 5
2100 REM " --- Dollars"
2120 LET V0$="N",V2$=STR(A[X0]),V3$=M1$,V1=15,V2=9+X0
2130 IF X0=5 THEN LET V2=V2+1
2140 GOSUB 7000
2150 LET A[X0]=V
2160 IF V3=4 THEN GOTO 3000
2170 IF V3<>2 THEN GOTO 2200
2180 IF X0>0 THEN LET X0=X0-1
2190 GOTO 2100
2200 REM " --- Dollars"
2220 LET V0$="N",V2$=STR(A[X0+6]),V3$=M2$,V1=15+M1,V2=9+X0
2230 IF X0=5 THEN LET V2=V2+1
2240 GOSUB 7000
2260 LET A[X0+6]=V
2270 IF V3=2 THEN GOTO 2100
2290 NEXT X0
3000 GOSUB 5000
3010 GOTO 3200
4000 REM " --- Options"
4020 LET V0$="S",V1$="KC",V2$="",V3$="",V4$="Is The Above Information Correct 
4020:(Y/N/Delete)?",V0=6,V1=FNV(V4$),V2=22
