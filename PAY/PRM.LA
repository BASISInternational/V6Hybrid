1160 FIND (PRM10_DEV,KEY=N0$+"F"+A0$(5,2),DOM=1100)IOL=PRM10F
1170 PRINT @(V1+V0+1,V2),X0$(6,20),
1300 REM " --- Employee"
1320 LET V0$="M",V1$="KCE",V2$=A0$(7,P[0]),V3$=P1$,V0=9,V1=15,V2=5
1325 LET V4$="Enter Employee Number, <F3>=Lookup"
