0400 REM " --- Parameters
0410 FIND (SYS01_DEV,KEY="T"+FID(0),DOM=9800)IOL=SYS01T
0420 LET N0$=F0$(16,2),N1$=F4$,N2$="PR",N4$=F5$
0430 FIND (SYS01_DEV,KEY=N0$+N2$+"00",DOM=9800)IOL=PRS01A
0440 FIND (SYS01_DEV,KEY=N0$+"GL00",DOM=9800)IOL=GLS01A
0450 DIM P[4],G[4]
0460 FOR X=0 TO 4
0465 LET G[X]=NUM(G2$(X*2+1,2),ERR=0470)
0470 NEXT X
0480 LET G[2]=FNYY_YEAR(G2$(5,2))
0490 LET P[0]=NUM(P2$(1,2)),P[1]=NUM(P2$(3,2)),P[2]=NUM(P3$(5,1)),P[3]=NUM(P3$
0490:(7,1))
0500 REM " --- Init Data
0520 DIM A0$(11),A1$(240),B0$(11),B1$(5*2),B[5],C[5]
0530 LET K0=1,K9=11,L0=6,L9=20,L1=6
0540 LET A0$(1,2)=N0$
0550 LET M8$="(###)-###-####",M9$="000-00-0000",M1=LEN(M1$),M2=LEN(M2$),M3=LEN
0550:(M3$)
0650 GOSUB 6600
