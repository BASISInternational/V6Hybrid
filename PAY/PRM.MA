1030 IF V2$(1,2)<>A0$(1,2) THEN LET V2$=""
1040 IF V2$<>"" THEN LET V2$=V2$(3,P[0])
1050 LET V0$="M",V1$="KEC",V3$=P1$,V4$="Enter Employee Number (<F3>=Lookup)",V
1050:0=9,V1=15,V2=3,O8=1
1060 GOSUB 7000
1070 IF V3=4 THEN GOTO 9900
