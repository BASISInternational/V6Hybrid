4020 LET MENUS=1,MENUS$[MENUS]="PRM.MA",WIN_X=40,WIN_Y=L0+1,O0=1,O9=0
4030 IF P3$(9,1)="Y" THEN LET MENUS=MENUS+1,MENUS$[MENUS]="PRM.MP"
4035 LET MENUS=MENUS+1,MENUS$[MENUS]="PRM.MJ"
4065 CALL "SYC.OA",MENUS,MENUS$[ALL],WIN_X,WIN_Y,DESCRIPTION$,SELECTION$
4070 CALL "SYC.WC",1,0,80,0,0,L0-1,0
4075 PRINT @(0,L0),'CE',
