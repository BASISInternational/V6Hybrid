5000 REM " --- Display
5020 PRINT 'SB',@(15,3),FNF$(A0$(3,P[0]),M0$),@(15,4),A1$(1,16),@(45,4),A1$(17
5020:,14),'SF',
5090 RETURN
6000 REM " --- Clear Screen
6020 PRINT @(0,L0),'CE',
6090 RETURN
6600 REM " --- Create Heading
6610 LET H5$=""
6620 READ (PRM10_DEV,KEY=N0$+"HH",DOM=6630)
6630 READ (PRM10_DEV,END=6790)IOL=PRM10H
6640 IF X$(1,4)<>N0$+"HH" THEN GOTO 6790
6650 LET X$=X$(7,9)
6660 IF X$(9,1)<>" " THEN GOTO 6700
6670 LET X$=" "+X$,X$=X$(1,9)
6680 GOTO 6660
