0720 PRINT 'SB',@(5,3),"Pay Code:",@(2,4),"Description:",@(2,5),"Report Code:"
0720:,@(48,5),"Productive:",@(7,6),"Units?:",@(47),"Special Pay:",@(1,7),"Auto
0720: Deduct?:",@(1,8),"Accrual Type:",@(0,9),"Accrual Basis:",@(0,10),"Accrua
0720:l Total:",@(4,11),"Calc Rate:",@(1,12),"Premium Rate:",@(2,13),"Stand Uni
0720:ts:",@(1,14),"Accrual Rate:",@(5,16),"Total To",@(24),"Operator",@(33),"S
0720:pecial",@(45),"Total To",@(64),"Operator",@(73),"Special",
0740 FOR X=1 TO 10
0750 LET X0=1,Y0=X+16
0760 IF X>5 THEN LET X0=41,Y0=Y0-5
0770 PRINT @(X0,Y0),X:"##.",
