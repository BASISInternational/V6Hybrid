0520 DIM A0$(32),A1$(10*2),A2$(10),A3$(10),A[3]
0530 LET K0=1,K9=5
0540 LET A0$(1,3)=N0$+"A"
0550 LET M1=LEN(M1$),M2=LEN(M2$)
