1050 LET V0$="S",V1$="CEK",V3$="",V4$="Enter Up To 2 Characters, <F3>=Lookup, 
1050:<F4>=End",V0=2,V1=15,V2=3,O9=0,O7=0
1060 GOSUB 7000
1070 IF V3=4 THEN GOTO 4500
1075 IF V3=3 THEN GOSUB 6100
1080 IF V$="" THEN GOTO 0900
1090 LET A0$(4)=V$
1200 REM " --- Find Key
1220 FIND (PRM10_DEV1,KEY=A0$(1,K9),DOM=1400)IOL=PRM10A
1300 REM " --- Display
1320 GOSUB 5000
1340 GOTO 4000
1400 REM " --- New Record
1420 CALL "SYC.YN",1,"Is This A New Record",1,V$,V3
1440 ON POS(V$="YN") GOTO 1400,1500,1000
1500 REM " --- Setup
1510 LET A0$(6)="",A1$(1)="",A2$(1)="",A3$(1)=""
1520 DIM A[3]
1530 LET A0$(24,4)="YNNA",A0$(30,2)="AN"
1540 GOSUB 5000
2000 REM " --- Overlay
2020 LET O0=1,O9=1
2040 RUN "PRM.AB"
4000 REM " --- Options
4005 IF O7=1 THEN GOTO 4200
4010 PRECISION P[3]
4020 LET V0$="S",V1$="KC",V2$="",V3$="",V4$="Is The Above Information Correct 
4020:(Y/N/Delete)? ",V0=6,V1=FNV(V4$),V2=22
4025 GOSUB 7000
4030 IF V$="DELETE" THEN GOTO 4200
4040 IF O9=0 THEN IF V$="" OR V$="Y" THEN GOTO 1000
4050 ON POS(V$="YN") GOTO 4000,4100,2000
4100 REM " --- Write
4120 WRITE (PRM10_DEV1,KEY=A0$(1,K9))IOL=PRM10A
4190 GOTO 1000
4200 REM " --- Delete
4220 REMOVE (PRM10_DEV1,KEY=A0$(1,K9),DOM=4230)
4290 GOTO 1000
4500 REM " --- Print
4520 CALL "SYC.YN",1,"Do You Wish To Print A List Of All Records",1,V$,V3
4540 ON POS(V$="YN") GOTO 4500,4550,9900
4560 LET O0=1
4580 RUN "PRM.AC"
5000 REM " --- Display
5020 PRINT @(15,4),A0$(6,16),@(15,5),A0$(22,2),@(15,6),A0$(24,1),@(15,7),A0$(2
5020:5,1),@(15,8),A0$(26,1),@(15,9),A0$(27,1),@(15,10),A0$(28,2),@(60,5),A0$(3
5020:0,1),@(60,6),A0$(31,1),@(15,11),A[0]:M3$,@(15,12),A[1]:M3$,@(15,13),A[2]:
5020:M2$,@(15,14),A[3]:M3$,
5030 FOR X=0 TO 9
5040 IF A1$(X*2+1,2)="  " THEN GOTO 5080
5050 LET X0=5,Y0=17+X
5060 IF X>4 THEN LET X0=45,Y0=Y0-5
5070 PRINT @(X0,Y0),A1$(X*2+1,2),@(X0+25),A2$(X+1,1),@(X0+30),A3$(X+1,1),
5080 NEXT X
5090 RETURN
6000 REM " --- Subroutines
6100 REM " --- Code Lookup
6110 LET V4=1,V6=4,V7=2,V8=6,V9=16,V5$="A"
6120 CALL "SYC.LZ",V1,V2,V4,PRM10_DEV1,V6,V7,V8,V9,V$,V5$,N0$
6190 RETURN
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
