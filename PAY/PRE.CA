1080 IF V$="" THEN GOTO 0900
1090 LET B0$(3)=V$
1200 REM " --- Find Key"
1220 FIND (PRM01_DEV,KEY=B0$(1,11),DOM=1000)IOL=PRM01A
1300 REM " --- Display"
1320 GOSUB 5000
1400 REM " --- Employee Terminated"
1410 IF B1$(170,3)="   " THEN GOTO 1500
1420 DIM MESSAGE$[1]
1430 LET MESSAGE$[0]="This Employee Has Been Terminated (<Enter>=Continue)"
1440 CALL "SYC.XA",2,MESSAGE$[ALL],0,22,-1,V$,V3
1450 GOTO 1000
1500 REM " --- Pay Rates"
