0760 PRINT @(0,9),"Seq",@(6),"Date",@(13),"EC",@(16),"TC",@(14+M3),"Rate",@(20
0760:+M3),"DC",@(17+M3+M2),"Units",@(16+M3+M2+M1),"Amount",@(77),"?",
0790 PRINT 'SF',
0900 REM " --- Init File"
0920 READ (PRM01_DEV,KEY=N0$,DOM=0930)
1000 REM " --- Key"
1010 PRINT 'CF',
1020 LET V2$="",V2$=KEY(PRM01_DEV,END=1050)
1030 IF V2$(1,2)<>B0$(1,2) THEN LET V2$=""
1032 IF V2$<>"" THEN READ (PRM01_DEV,KEY=V2$)IOL=PRM01A
1034 IF V2$<>"" THEN IF B1$(170,3)<>"   " THEN GOTO 1020
1036 IF V2$<>"" THEN IF POS(B1$(220,1)=P9$)=0 THEN GOTO 1020
1040 IF V2$<>"" THEN LET V2$=V2$(3,P[0])
1050 LET V0$="M",V1$="KEC",V3$=P1$,V4$="Valid Employee Number   <F3>=Lookup",V
1050:0=9,V1=15,V2=3
1060 GOSUB 7000
1070 IF V3=4 THEN GOTO 9900
