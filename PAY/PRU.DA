0465 LET G[X]=NUM(G2$(X*2+1,2),ERR=0470)
0470 NEXT X
0480 LET G[2]=FNYY_YEAR(G2$(5,2))
0490 LET P[0]=NUM(P2$(1,2)),P[1]=NUM(P4$(1,2)),P[2]=FNYY_YEAR(P4$(3,2)),P[3]=N
0490:UM(P3$(7,1))
0500 REM " --- Init Data"
0510 PRECISION P[3]
0520 DIM C[11]
0530 LET M0=LEN(M0$)
0540 LET P9=P[1]
0700 REM " --- Background"
0720 FOR X=4 TO 4 STEP 2
0730 CALL "SYC.WC",1,0,80,0,0,X,0
0740 NEXT X
0760 PRINT 'SB',@(32,3),"Period:",'SF','CF',
