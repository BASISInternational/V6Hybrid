0920 ON V3 GOTO 0930,0900,0900,0900,9900
0930 ON POS(V$="YN") GOTO 0900,1000,0800
0940 REM " --- Disallow 'M'enu option in Error Routine
0950 LET EXIT_CTRL=1
1000 REM " --- Earnings"
1010 PRINT @(0,10),'CE',
1020 CALL "SYC.NB","Employee Earnings",M0+3,COLUMN
1030 DIM Y[11],Z[4]
1040 READ (PRT01_DEV,KEY=N0$,DOM=1050)
1050 LET K0$=KEY(PRT01_DEV,END=1200)
1060 IF K0$(1,2)<>N0$ THEN GOTO 1200
1080 PRINT @(COLUMN,11),FNF$(K0$(3,P[0]),M0$)," ",K0$(13,2),
1100 READ (PRT01_DEV)IOL=PRT01A
1120 LET Y[0]=Y[5],Y[5]=0,Y[6]=Y[11],Y[11]=0
1140 WRITE (PRT01_DEV,KEY=K0$)IOL=PRT01A
1190 GOTO 1050
1200 REM " --- Deductions"
1210 PRINT @(0,10),'CE',
1220 CALL "SYC.NB","Employee Deductions",M0+3,COLUMN
1230 DIM Y[5],Z[1]
1240 READ (PRT11_DEV,KEY=N0$,DOM=1250)
1250 LET K0$=KEY(PRT11_DEV,END=1400)
1260 IF K0$(1,2)<>N0$ THEN GOTO 1400
1280 PRINT @(COLUMN,11),FNF$(K0$(3,P[0]),M0$)," ",K0$(13,2),
1300 READ (PRT11_DEV)IOL=PRT11A
1320 LET Y[0]=Y[5],Y[5]=0
1340 WRITE (PRT11_DEV,KEY=K0$)IOL=PRT11A
1390 GOTO 1250
1400 REM " --- Taxes"
1410 PRINT @(0,10),'CE',
1420 CALL "SYC.NB","Employee Taxes",M0+3,COLUMN
1430 DIM Y[17],Z[0]
1440 READ (PRT21_DEV,KEY=N0$,DOM=1450)
1450 LET K0$=KEY(PRT21_DEV,END=1600)
1460 IF K0$(1,2)<>N0$ THEN GOTO 1600
1480 PRINT @(COLUMN,11),FNF$(K0$(3,P[0]),M0$)," ",K0$(13,2),
1500 READ (PRT21_DEV)IOL=PRT21A
1520 LET Y[0]=Y[5],Y[5]=0,Y[6]=Y[11],Y[11]=0,Y[12]=Y[17],Y[17]=0
1540 WRITE (PRT21_DEV,KEY=K0$)IOL=PRT21A
1590 GOTO 1450
1600 REM " --- Contributions"
1610 PRINT @(0,10),'CE',
1620 CALL "SYC.NB","Employee Contributions",M0+3,COLUMN
1630 DIM Y[17],Z[1]
1640 READ (PRT31_DEV,KEY=N0$,DOM=1650)
1650 LET K0$=KEY(PRT31_DEV,END=2000)
1660 IF K0$(1,2)<>N0$ THEN GOTO 2000
1680 PRINT @(COLUMN,11),FNF$(K0$(3,P[0]),M0$)," ",K0$(13,2),
1700 READ (PRT31_DEV)IOL=PRT31A
1720 LET Y[0]=Y[5],Y[5]=0,Y[6]=Y[11],Y[11]=0,Y[12]=Y[17],Y[17]=0
1740 WRITE (PRT31_DEV,KEY=K0$)IOL=PRT31A
1790 GOTO 1650
2000 REM " --- Init Check Read"
2010 PRINT @(0,10),'CE',
2020 CALL "SYC.NB","Examining Check",7,COLUMN
2030 READ (PRT03_DEV,KEY=N0$,DOM=2040)
2100 REM " --- Main Check Read"
2120 LET K0$=KEY(PRT03_DEV,END=3000)
2140 IF K0$(1,2)<>N0$ THEN GOTO 3000
2160 READ (PRT03_DEV)IOL=PRT03A
2180 PRINT @(COLUMN,11),B0$(3,7),
2200 REM " --- Keep Or Remove"
2210 IF LEN(B0$)<25 THEN GOTO 2800
2220 IF B0$(23,3)>P9$ THEN GOTO 2100
2800 REM " --- Remove Check"
2820 REMOVE (PRT03_DEV,KEY=K0$)
2900 GOTO 2100
3000 REM " --- Labor Dist"
3010 PRINT @(0,10),'CE',
3020 CALL "SYC.NB","Updating Department",7,COLUMN
3030 READ (PRT05_DEV,KEY=N0$,DOM=3040)
3100 REM " --- Main Labor Dist Read"
3110 LET K$=KEY(PRT05_DEV,END=3500)
3120 READ (PRT05_DEV,END=3500)IOL=PRT05A
3130 IF K$="" THEN GOTO 3500
3140 IF POS(N0$=K$)<>1 THEN GOTO 3500
3160 PRINT @(COLUMN,11),C0$(3,4),
3200 LET C[0]=C[5],C[6]=C[11],C[5]=0,C[11]=0
3300 WRITE (PRT05_DEV,KEY=K$)IOL=PRT05A
3390 GOTO 3100
4000 REM " --- Increment Period"
4010 IF P9<P[1] THEN GOTO 4100
4020 LET P[1]=P[1]+1
4030 IF P[1]>G[0] THEN LET P[1]=1,P[2]=P[2]+1
4050 EXTRACT (SYS01_DEV,KEY=N0$+N2$+"00",DOM=4060)IOL=PRS01A
4060 LET P4$(1,2)=STR(P[1]:"00"),P4$(3,2)=FNYEAR_YY21$(P[2])
4070 WRITE (SYS01_DEV,KEY=N0$+N2$+"00")IOL=PRS01A
4100 REM " --- Done"
4120 GOTO 9900
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8110 REM " --- FNYEAR_YY21$ Convert Numeric Year to 21st Century 2-Char Year"
8115 DEF FNYEAR_YY21$(Q)=FNYY_YY21$(STR(MOD(Q,100):"00"))
8120 REM " --- FNYY_YY21$ Convert 2-Char Year to 21st Century 2-Char Year"
8125 DEF FNYY_YY21$(Q1$)
8130 LET Q3$=" ABCDE56789ABCDEFGHIJ",Q1$(1,1)=Q3$(POS(Q1$(1,1)=" 0123456789ABC
8130:DEFGHIJ"))
8135 RETURN Q1$
8140 FNEND
8145 REM " --- FNYY21_YY$ Un-Convert 21st Century 2-Char Year to 2-Char Year"
8150 DEF FNYY21_YY$(Q1$)
8155 LET Q3$=" 01234567890123456789",Q1$(1,1)=Q3$(POS(Q1$(1,1)=" 0123456789ABC
8155:DEFGHIJ"))
8160 RETURN Q1$
8165 FNEND
8170 REM " --- FNYY_YEAR Convert 2-Char Year to 21st Century Numeric Year"
8175 DEF FNYY_YEAR(Q1$)
8180 LET Q=NUM(FNYY21_YY$(Q1$)); IF Q<50 THEN LET Q=Q+100
8185 RETURN Q
8190 FNEND
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF:
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
