0040 REM 
0085 SETESC 9000
0090 SETERR 9000
0100 REM " --- Open/Lock Files"
0170 CALL "SYC.GA",7,1,"","",STATUS
0175 IF STATUS=1 THEN GOTO 9900
0200 REM " --- IOLists"
0210 PRM01A: IOLIST A0$,A1$
0220 PRM10E: IOLIST X$
0230 PRM10F: IOLIST X$
0500 REM " --- Init Data"
0510 LET HEADINGS=0; DIM HEADINGS$[HEADINGS]
0520 DIM W0$(W1),W1$(W1),W2$(W1),W3$(W1)
0800 REM " --- Test Pattern Query"
0810 CALL "SYC.YN",1,"Do You Wish To Print A Test Pattern",2,V$,V3
0820 IF V3=4 THEN GOTO 9900
0830 ON POS(V$="YN") GOTO 0800,0850,0900
0850 REM " --- Print Test Pattern"
0860 DIM Y0$(W1*W0,"X")
0870 LET Y1$=Y0$,Y2$=Y0$,Y3$=Y0$
0880 GOSUB 5500
0890 GOTO 0800
0900 REM " --- Determine Start"
0920 CALL "SYC.NB","Printing",30,COLUMN
0980 ON POS(P7$="NA") GOTO 0910,1000,1500
1000 REM " --- Numeric Sequence"
1020 READ (PRM01_DEV,KEY=N0$,DOM=1030)
1040 LET Y0$="",Y1$="",Y2$="",Y3$="",Y0=0
1100 REM " --- Main Read"
1105 CALL "SYC.HA",7,HEADINGS$[ALL],HEADINGS,PAGE,WIDTH,WHEN$,CLOCK$,STATUS; R
1105:EM "Check printing interrupt
1110 IF STATUS>0 THEN GOTO 9900
1120 READ (PRM01_DEV,END=4000)IOL=PRM01A
1130 IF A0$(1,2)<>N0$ THEN GOTO 4000
1140 IF A1$(170,3)<>"   " THEN GOTO 1100
1150 GOSUB 6000
1160 LET A1$(1,30)=V$
1200 REM " --- Setup"
1280 GOSUB 5000
1290 GOTO 1100
1500 REM " --- Alternate Sequence"
1520 READ (PRM03_DEV,KEY=N0$+"A",DOM=1530)
1600 REM " --- Main Read"
1620 LET K$=KEY(PRM03_DEV,END=4000)
1640 IF K$(1,3)<>N0$+"A" THEN GOTO 4000
1660 READ (PRM03_DEV)
1680 FIND (PRM01_DEV,KEY=N0$+K$(20),DOM=1600)IOL=PRM01A
1690 IF A1$(170,3)<>"   " THEN GOTO 1600
1700 REM " --- Setup"
1720 GOSUB 6000
1740 LET A1$(1,30)=V$
1780 GOSUB 5000
1790 GOTO 1600
4000 REM " --- Totals"
4020 IF Y0>0 THEN GOSUB 5500
4100 GOTO 9900
5000 REM " --- Prepare Address"
5010 LET A9$=A1$(101,2)+" "+FNZ$(A1$(103))
5020 IF POS(" "<>A1$(79,22))=0 THEN LET A1$(79,24)=A9$,A9$=""
5025 LET Q=POS("  "=A1$(79,22))
5027 IF Q>1 THEN LET A1$(79,33)=A1$(79,Q-1)+", "+A9$
5030 LET X0$="",X1$=""
5040 FIND (PRM10_DEV,KEY=N0$+"E"+A1$(221,2),DOM=5060)IOL=PRM10E
5050 LET X1$=X$(6,20)
5060 FIND (PRM10_DEV,KEY=N0$+"F"+A1$(223,2),DOM=5080)IOL=PRM10F
5070 LET X0$=X$(6,20)
5100 REM " --- Assemble"
5120 LET X0=0
5130 LET W0$(1)=A1$(1,30),W1$(1)=FNF$(A0$(3,P[0]),M0$)+" "+X0$,W2$(1)=X1$,W3$(
5130:1)=FNB$(P6$)
5140 IF P8$="Y" THEN LET W1$(1)=A1$(31,24),W2$(1)=A1$(55,24),W3$(1)=A1$(79,33)
5140:; IF POS(" "<>W2$)=0 THEN LET W2$=W3$; DIM W3$(W1)
5180 PRINT @(COLUMN,11),A1$(1,30),
5210 IF Y0>=W0 THEN GOSUB 5500
5220 IF X0>=W3 THEN GOTO 5290
5250 LET Y0$=Y0$+W0$,Y1$=Y1$+W1$,Y2$=Y2$+W2$,Y3$=Y3$+W3$
5260 LET Y0=Y0+1,X0=X0+1
5270 GOTO 5200
5290 RETURN
5500 REM " --- Print"
5520 PRINT (7)Y0$,'LF',Y1$,'LF',Y2$,'LF',Y3$
5530 LET L=4
5540 IF L>=W2 THEN GOTO 5600
5550 PRINT (7)""
5560 LET L=L+1
5570 GOTO 5540
5600 LET Y0$="",Y1$="",Y2$="",Y3$="",Y0=0
5690 RETURN
6000 REM " --- First/Last Name"
6020 LET V$=A1$(17,14),V=POS("  "=V$)
6040 IF V>1 THEN LET V$=V$(1,V-1)
6060 IF V$(LEN(V$),1)<>" " THEN LET V$=V$+" "
6070 IF POS(" "<>V$)=0 THEN LET V$=""
6080 LET V$=V$+A1$(1,16)
6090 RETURN
7000 REM " --- Standard Input Routine (15May95)"
7010 CALL "SYC.IA",V0$,V1$,V2$,V3$,V4$,PGM(-2),V0,V1,V2,V$,V,V3,DISPLAY_LEN
7020 IF V3=999 THEN GOTO 7200
7030 IF V3=127 THEN GOTO 7100
7090 RETURN
7100 REM " --- Escape During Input"
7110 CALL "SYC.ES",ERR=7200,PGM(-2),TCB(8),E$,E2,V3
7120 IF V3<>127 THEN GOTO 7000
7130 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
7200 REM " --- Error During Input"
7210 ESCAPE
7290 GOTO 7000
8000 REM " --- Functions"
8010 DEF FNA$(Q$,Q2$)=STR(MOD((ASC(Q$)-32)*POS(" "<>Q2$(2,1)),100):"00")
8020 DEF FNB$(Q1$)=FNA$(Q1$(2),Q1$)+"/"+FNA$(Q1$(3),Q1$)+"/"+FNA$(Q1$(1),Q1$)
8080 DEF FNP$(Q$)=CVS(Q$,2)
8085 DEF FNZ$(Q$)=FILL(10,CVS(Q$(1,3)+FILL(POS("9"<Q$(1,5))>0)+Q$(4,2)+FILL(AB
8085:S(POS("A">=Q$(1,6))>0)-POS("0">Q$(6,4))>0,"-")+Q$(6,4)+FILL(10),16))
8200 REM " --- FNF$ AlphaNumeric Masking Function"
8210 DEF FNF$(Q1$,Q2$)
8220 IF Q2$="" THEN LET Q2$=FILL(LEN(Q1$),"0")
8230 RETURN STR(-NUM(Q1$,ERR=ALPHA_FNF):Q2$,ERR=ALPHA_FNF)
8240 ALPHA_FNF:
8245 LET Q=1,Q0=0
8250 WHILE LEN(Q2$(Q))
8255 IF POS(Q2$(Q,1)="-()") THEN LET Q0=Q0+1 ELSE LET Q2$(Q,1)="X"
8260 LET Q=Q+1
8265 WEND
8270 IF LEN(Q1$)>LEN(Q2$)-Q0 THEN LET Q1$=Q1$(1,LEN(Q2$)-Q0)
8280 RETURN STR(Q1$:Q2$)
8290 FNEND
9000 REM " --- Standard Error Routine (15May95)"
9010 IF ERR=127 THEN GOTO 9300
9020 CALL "SYC.EA",ERR=9090,EXIT_CTRL,PGM(-2),ERR,TCB(5),E$,E1,E2
9030 IF E1=1 THEN GOTO 9100
9040 IF E1=3 THEN GOTO 9200
9080 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9090 ESCAPE
9100 REM " --- Retry"
9190 RETRY
9200 REM " --- Return"
9210 SETERR 9000
9290 GOTO 9900
9300 REM " --- Standard Escape Routine"
9310 CALL "SYC.ES",ERR=9350,PGM(-2),TCB(8),E$,E2,V3
9320 IF V3<>127 THEN GOTO 9390
9330 PRINT @(0,E2),'CL','CURSOR'("ON"),E$,'LF'
9350 ESCAPE
9390 RETURN
9900 RUN "SYS.AA"
9999 END
