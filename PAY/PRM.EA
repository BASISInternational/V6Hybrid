0650 CALL "SYC.DA",1,3,3,FILES$[ALL],OPTIONS$[ALL],CHANNELS[ALL],BATCH,STATUS
0660 IF STATUS>0 THEN GOTO 9900
0670 LET GLM01_DEV=CHANNELS[3]
0700 REM " --- Background"
0720 CALL "SYC.WC",1,0,80,0,0,7,0
0730 PRINT 'SB',@(0,3),"Department ID:",@(2,4),"Description:",
0740 IF GL$="Y" THEN PRINT @(1,5),"Cash Account:",@(1,6),"Acc. Account:",
0750 PRINT @(79-(M2+23),3),"Budgeted Daily Hours:",@(79-(M3+30),4),"Budgeted A
0750:verage Hourly Rate:",
0790 PRINT 'SF',
0900 REM " --- Init File"
0920 READ (PRM10_DEV,KEY=A0$(1,3),DOM=0930)
1000 REM " --- Key"
1010 PRINT 'CF',
1020 LET V2$="",V2$=KEY(PRM10_DEV,END=1050)
1030 IF V2$(1,3)<>A0$(1,3) THEN LET V2$=""
1040 IF V2$<>"" THEN LET V2$=V2$(4)
1050 LET V0$="S",V1$="CEK",V3$="",V4$="Enter Up To 2 Characters, <F3>=Lookup, 
1050:<F4>=End",V0=2,V1=15,V2=3,O9=0
1060 GOSUB 7000
1070 IF V3=4 THEN GOTO 4500
1075 IF V3=3 THEN CALL "SYC.LZ",V1,V2,1,PRM10_DEV,4,2,6,16,V$,"E",N0$
1080 IF V$="" THEN GOTO 0900
1090 LET A0$(4)=V$
1200 REM " --- Find Key"
1220 FIND (PRM10_DEV,KEY=A0$(1,K9),DOM=1400)IOL=PRM10E
1230 IF GL$="N" THEN LET A1$(1)="",A3$(1)="",A5$(1)="",A7$(1)="",A8$(1)=""
1300 REM " --- Display"
1320 GOSUB 5000
1340 GOTO 4900
1400 REM " --- New Record"
1420 CALL "SYC.YN",1,"Is This A New Record",1,V$,V3
1440 ON POS(V$="YN") GOTO 1400,1500,1000
1500 REM " --- Setup"
1510 LET A0$(6)="",A1$(1)="",A2$(1)="",A3$(1)="",A4$(1)="",A5$(1)="",A6$(1)=""
1510:,A7$(1)="",A8$(1)=""
1520 DIM A[1]
2000 REM " --- Description"
2020 LET V0$="S",V1$="",V2$=A0$(6,20),V3$="",V0=20,V1=15,V2=4,I0=0
2040 GOSUB 7000
2060 LET A0$(6,20)=V$
2090 GOTO 3900
2100 REM " --- Accounts"
2110 LET X0=I0-1
2115 IF GL$="N" THEN GOTO 2190
2120 LET V0$="M",V1$="RC",V2$=A1$(G[4]*X0+1,G[3]),V3$=G1$,V0=G[4],V1=15,V2=X0+
2120:5
2125 LET V4$="Enter A Valid G/L Account, <F3>=Lookup"
2130 GOSUB 7000
2140 IF V3=2 OR V3=4 THEN GOTO 3900
2146 IF V3=3 THEN CALL "SYC.LG",V$
2148 IF V$="" THEN GOTO 2120
2150 LET A1$(G[4]*X0+1,G[4])=V$
2160 FIND (GLM01_DEV,KEY=N0$+A1$(G[4]*X0+1,G[4]),DOM=2100)IOL=GLM01A
2170 PRINT @(V1,V2),FNF$(A1$(G[4]*X0+1,G[3]),G5$)," ",X0$(1,35),
2190 GOTO 3900
2200 REM " --- Hours"
2220 LET V0$="N",V1$="",V2$=STR(A[0]),V3$=M2$,V0=M2,V1=79-M2,V2=3
2240 GOSUB 7000
2260 LET A[0]=V
2290 GOTO 3900
2300 REM " --- Cost"
2320 LET V0$="N",V1$="",V2$=STR(A[1]),V3$=M3$,V0=M3,V1=79-M3,V2=4
2340 GOSUB 7000
2360 LET A[1]=V
2390 GOTO 3900
3900 REM " --- Next Field"
3910 IF V3=4 THEN GOTO 4000
3920 IF V3<>2 THEN GOTO 3950
3930 IF I0>0 THEN LET I0=I0-1
3940 GOTO 3960
3950 LET I0=I0+1
3960 ON I0 GOTO 2000,2100,2100,2200,2300,3990
4000 REM " --- Options"
4002 IF GL$="N" THEN GOTO 4020
4005 GOSUB 6500
4010 IF F9$<>"11" THEN GOTO 4400
4020 LET V0$="S",V1$="KC",V2$="",V3$="",V4$="Is The Above Information Correct 
4020:(Y/N/Delete)?",V0=6,V1=FNV(V4$),V2=22
4025 GOSUB 7000
4030 IF V$="DELETE" THEN GOTO 4200
4050 ON POS(V$="YN") GOTO 4000,4100,2000
4100 REM " --- Write"
4120 WRITE (PRM10_DEV,KEY=A0$(1,K9))IOL=PRM10E
4190 GOTO 4900
4200 REM " --- Delete"
4220 REMOVE (PRM10_DEV,KEY=A0$(1,5),DOM=4230)
