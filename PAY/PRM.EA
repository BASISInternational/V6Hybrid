0500 REM " --- Init Data"
0510 DIM J0$(20,"0"),J$(80,"-"),J1$(40," ")
0520 DIM A0$(32),A1$(2*G[4])
0530 LET K0=1,K9=5,L0=8,O0=1
0540 LET A0$(1,3)=N0$+"E"
0550 LET M1=LEN(M1$),M2=LEN(M2$),M3=LEN(M3$),G5=LEN(G5$)
0560 LET P9=14,P8=10,P7=14
